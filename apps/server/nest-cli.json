{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "assets": [
    {
      "include": "modules/mailer/templates/**/*",
      "watchAssets": true,
      "outDir": "dist"
    }
  ],

  "compilerOptions": {
    "assets": ["**/*.hbs"],
    "deleteOutDir": true
  }
}
